@page "{applicationId?}"
@inject IStringLocalizer<Id.Pages.Account.RegisterUserModel> t;
@model Id.Pages.Account.RegisterUserModel
@{
	//ViewData["Title"] = t["Register"] ?? "";
}
@section Scripts {
<script src="~/js/api.js"></script>
<script src="~/js/account.js"></script>
<script src="~/js/validations_register_user.js"></script>
}

<style>
	#icon_preview img {
	width: 85px;
	height: 85px;
	margin-top: 8px;

	object-fit: cover; /* Ensures the image fits nicely */
	}
</style>

<div class="row">
	<div class="col-md-12">
		<h2>@t["Register"]</h2>
		<hr />
	</div>
	<div class="col-md-7">

		<div class="row"> 
			<div class="col-md-2">
				<img class="centered" style="width: 76px; height: 76px; margin: 3px; margin-right: 5px;" src="@Model.ApplicationInfo.ApplicationLogoUrl" />
			</div>
			<div class="col-md-10">
				<h4 class="mt-3 mb-0">@Model.ApplicationInfo.BrandName | @Model.ApplicationInfo.ApplicationName</h4><br />
				<div class="text-center mt-0"><i><span id="description"></span></i></div>
			</div>
		</div>
		<hr />
		@if(Model.RegistrationErrors.Count > 0)
		{
			<div class="alert alert-danger">
				<ul>
					@foreach(var error in Model.RegistrationErrors)
					{
						<li>@t[error]</li>
					}
				</ul>
			</div>
		}
		@if(Model.RegistrationWarnings.Count > 0)
		{
			<div class="alert alert-danger">
				<ul>
					@foreach(var error in Model.RegistrationErrors)
					{
						<li>@t[error]</li>
					}
				</ul>
			</div>
		}
		<form method="post"  id="register" enctype="multipart/form-data">
				<input asp-for="Input.ApplicationId" type="hidden" value="@Model.ApplicationId"  />
				<div class="form-group">
					<div id="email_err" class="text-danger p-2 pb-0"></div>
					<label style="font-weight: bold">@t["Email address"]</label>
					<input asp-for="Input.Email" 
					type="email" class="form-control" 
					autocomplete="new-email" 
					id="email_input"
					required
					onfocus="loadHelp('Account_Email')" />
				</div>

				<div class="form-group">
					<div id="password_err" class="text-danger p-2 pb-0"></div>
					<label style="font-weight: bold">@t["Password"]</label>
					<input asp-for="Input.Password" 
					id="password_input"
					type="password" 
					class="form-control" 
					autocomplete="off"
					required
					onfocus="loadHelp('Account_Password')"  />

				</div>

				<div class="form-group">
					<div id="password_confirm_err" class="text-danger p-2 pb-0"></div>
					<label style="font-weight: bold">@t["Confirm password"]</label>
					<input asp-for="Input.PasswordConfirm"
					type="password" 
					id="password_confirm_input"
					class="form-control" 
					autocomplete="off" required
					onfocus="loadHelp('Install_ConfirmPassword')" />
				</div>
				<div class="form-group">
					<div id="firstname_err" class="text-danger p-2 pb-0"></div>
					<label style="font-weight: bold">@t["First name"]</label>
					<input asp-for="Input.FirstName" type="text" 
					class="form-control" 
					id="first_name_input"
					autocomplete="off" 
					required
					onfocus="loadHelp('Account_FirstName')" />
				</div>

				<div class="form-group">
					<div id="lastname_err" class="text-danger p-2 pb-0"></div>
					<label style="font-weight: bold">@t["Last name"]</label>
					<input asp-for="Input.LastName" type="text" 
					class="form-control"
					id="last_name_input"
					autocomplete="off" 
					required
					onfocus="loadHelp('Account_LastName')" />
				</div>

				<div class="form-group">
					<div id="displayedname_err" class="text-danger p-2 pb-0"></div>
					<label>@t["Displayed name"]</label>
					<input asp-for="Input.DisplayedName" type="text" 
					class="form-control"
					id="displayed_name_input"
					autocomplete="off" 
					onfocus="loadHelp('Account_DisplayedName')" />
				</div>

				<div class="form-group">
					<div id="birthdate_err" class="text-danger p-2 pb-0">

					</div>
					<label style="font-weight: bold">@t["Birthdate"]</label>
					<input asp-for="Input.Birthdate"
					type="date"
					class="form-control"
					id="birthdate_input"
					autocomplete="off"
					min="1935-01-01"
					required
					onfocus="loadHelp('Account_Birthdate')" />
				</div>

				<div class="row">
					<div class="col-10">
						<div class="form-group">
							<div id="icon_err" class="text-danger p-2 pb-0"></div>
							<label>@t["Profile picture"]</label>
							<input asp-for="Input.ProfilePicture" 
							type="file" 
							class="form-control" 
							autocomplete="off" 
							accept=".jpg,.jpeg,.png,.bmp"
							required
							id="profile_picture_input"
							onfocus="loadHelp('Account_UserPicture')" />
						</div>
					</div>
					<div class="col-2">
						<span id="icon_preview" class="centered"></span>
					</div>
				</div>

			<div class="form-group">
				<label style="font-weight: bold">@t["Gender"] </label>
				<select asp-for="Input.Gender"
						class="form-control"
						id="gender_input"
						onclick="loadHelp('Account_Gender')"
						asp-items="@Model.GenderOptions">
				</select>
			</div>

				<div class="form-group">
					<div id="terms_err" class="text-danger p-2 pb0"></div>
					<label style="font-weight: bold">@t["Agree to terms"] <a href="/Privacy" target="_blank" style="margin-left: auto;"><i class="bi bi-info-circle" style="margin-left: auto;"></i></a></label>
					<select asp-for="Input.AcceptTerms"
					class="form-control"
					id="accept_terms_input"
					onclick="loadHelp('Account_Terms')"
					asp-items="@Model.TermsOptions">
					</select>
				</div>

				<div class="form-group">
					<div id="cookies_err" class="text-danger p-2 pb0"></div>
					<label style="font-weight: bold">@t["Agree to cookies"] <a href="/Cookies" target="_blank" style="margin-left: auto;"><i class="bi bi-cookie" style="margin-left: auto;"></i></a></label>
					<select asp-for="Input.AcceptCookiePolicy"
					class="form-control"
					id="accept_cookies_input"
					onclick="loadHelp('Account_Cookies')"
					asp-items="@Model.CookieOptions">
					</select>
				</div>
				<div class="form-group">
					<div id="privacy_err" class="text-danger p-2 pb0"></div>
					<label style="font-weight: bold">@t["Agree to share user details"] <a href="/Privacy" target="_blank" style="margin-left: auto;"><i class="bi bi-info-circle" style="margin-left: auto;"></i></a></label>
					<select asp-for="Input.AcceptPrivacyPolicy"
					class="form-control"
					onclick="loadHelp('Account_DataShare')"
					id="accept_data_share"
					asp-items="@Model.PrivacyOptions">
					</select>
				</div>
				<div class="m-3">@t["Values with bold names are required"]</div>
				<button type="submit"
				id="submit_button"
				class="btn btn-primary btn-block mt-3"
				disabled>
					@t["Next"]
				</button>
			</form>

	</div>
	<div class="col-md-5">
		<div id="div_help" class="helper" style="display:none">
		</div>
		<div id="div_help_password" class="helper mt-3" style="display:block; border-color: forestgreen;">
			<h3>@t["Password checks"]</h3>
			<ul id="password_checks">
					<li id="password_checks_minlength">@t["Minimal password length"]: <b>@Model.PasswordRules.MinimumLength </b> @t["characters"]</li>
					<li id="password_checks_maxlength">@t["Maximal password length"]: <b>@Model.PasswordRules.MaximumLength </b> @t["characters"]</li>
					@if(Model.PasswordRules.RequireUppercase)
					{
						<li id="password_checks_uppercase">@t["Password must contain at least one uppercase letter"]</li>
					}
					@if(Model.PasswordRules.RequireLowercase)
					{
						<li id="password_checks_lowercase">@t["Password must contain at least one lowercase letter"]</li>
					}
					@if(Model.PasswordRules.RequireDigit)
					{
						<li id="password_checks_digit">@t["Password must contain at least one number"]</li>
					}
					@if(Model.PasswordRules.RequireNonAlphanumeric)
					{
						<li id="password_checks_special">@t["Password must contain at least one special character"]</li>
					}
			</ul>
		</div>

	</div>
</div>

<script language="javascript">
	let active_page = "register";
	let help = 'Account_RegisterUser';
	let description = "@Model.ApplicationInfo.ApplicationDescription";
</script>



